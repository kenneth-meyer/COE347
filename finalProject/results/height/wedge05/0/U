FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0] 5000;

internalField   uniform (1 0 0);

boundaryField
{
    inlet
    {
        type            uniformFixedValue;
        uniformValue    constant (1 0 0);
        value           uniform (1 0 0);
    }
    bottom
    {
        type            fixedValue;
        value           $internalField;
    }
    frontAndBack
    {
        type            empty;
    }
    top
    {
        type            slip;
    }
    outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform (1 0 0);
    }
    car
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


